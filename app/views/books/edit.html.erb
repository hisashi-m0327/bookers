<head></head>

<body class=books-edit>
<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <div id="error_explanation">
    <h4>
      <%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:
    </h4>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @book, url: book_path(@book), method: :patch do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>
<% end %>

<p>
  <%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path %>
</p>

</body>
