<h1>
  <strong>Books</strong>
</h1>

<table>
  <tr>
    <th>Title</th>
    <th>body</th>
  </tr>


  <% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td>
      <%= link_to "Show", book_path(book) %>
      <%= link_to "Edit", edit_book_path(book) %>
      <%= link_to "Destroy", book_path(book), mithod: :delete %>
    </td>
  </tr>
  <% end %>
</table>

<%= form_with model: @book do |f| %>
<h2>
  <strong>New book</strong>
</h2>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>
<% end %>

